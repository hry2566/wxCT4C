    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/bin/Debug/${workspaceFolderBasename}.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "C:/Users/HRY/0000_APPS/CodeBlocks/MinGW/bin/gdb.exe"
            },
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile & Link Debug"
        }
    ]
}